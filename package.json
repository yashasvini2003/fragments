{
  "name": "fragments",
  "private": true,
  "version": "0.9.0",
  "description": "Fragments back-end API",
  "scripts": {
    "test:watch": "jest -c jest.config.js --runInBand --watch --",
    "test": "jest -c jest.config.js --runInBand --",
    "coverage": "jest -c jest.config.js --runInBand --coverage",
    "lint": "eslint --config eslint.config.mjs \"./src/**/*.js\" \"tests/**/*.js\"",
    "test:integration": "hurl --test --glob \"tests/integration/**/*.hurl\"",
    "start": "node src/index.js",
    "dev": "cross-env LOG_LEVEL=debug nodemon ./src/index.js --watch src",
    "debug": "cross-env LOG_LEVEL=debug nodemon --inspect=0.0.0.0:9229 ./src/index.js --watch src"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yashasvini2003/fragments.git"
  },
  "author": "Yashasvini Bhanuraj",
  "license": "UNLICENSED",
  "devDependencies": {
    "@eslint/create-config": "^1.3.1",
    "@eslint/js": "^9.10.0",
    "@orangeopensource/hurl": "^5.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.10.0",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "3.3.3",
    "supertest": "^7.0.0",
    "typescript-eslint": "^8.4.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.701.0",
    "aws-jwt-verify": "^4.0.1",
    "compression": "^1.7.4",
    "content-type": "^1.0.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "http-auth": "^4.2.0",
    "http-auth-passport": "^1.0.7",
    "markdown-it": "^14.1.0",
    "passport": "^0.7.0",
    "passport-http-bearer": "^1.0.1",
    "pino": "^9.4.0",
    "pino-http": "^10.3.0",
    "pino-pretty": "^11.2.2",
    "sharp": "^0.33.5",
    "stoppable": "^1.1.0"
  }
}
